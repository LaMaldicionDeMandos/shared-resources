<ul class="header-inner clearfix">
    <li id="menu-trigger" data-target="mainmenu" data-toggle-sidebar data-model-left="mactrl.sidebarToggle.left" data-ng-class="{ 'open': mactrl.sidebarToggle.left === true }">
        <div class="line-wrap">
            <div class="line top"></div>
            <div class="line center"></div>
            <div class="line bottom"></div>  
        </div>
    </li>

    <li class="logo hidden-xs">
        <a data-ui-sref="home" data-ng-click="mactrl.sidebarStat($event)">Shared Resources</a>
    </li>

    <li class="pull-right" ng-controller="headerController">
        <ul class="top-menu">

            <li class="dropdown" uib-dropdown popover-placement="left" popover-trigger="mouseenter"
                popover="Mira los mensajes que te envian">
                <a uib-dropdown-toggle href="">
                    <i class="tm-icon zmdi zmdi-email"></i>
                    <i class="tmn-counts" ng-if="user.messages && user.messages.length > 0">{{user.messages.length}}</i>
                </a>
                <div class="dropdown-menu dropdown-menu-lg stop-propagate pull-right">
                    <div class="listview">
                        <div class="lv-header">
                            Messages
                        </div>
                        <div class="lv-body">
                            <a class="lv-item" ng-href="" ng-repeat="it in user.messages">
                                <div class="media">
                                    <div class="pull-left">
                                        <img class="lv-img-sm" ng-src="{{it.profile.photo}}" alt="">
                                    </div>
                                    <div class="media-body">
                                        <div class="lv-title">{{ it.profile.name }}</div>
                                        <small class="lv-small">{{ it.message }}</small>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="clearfix"></div>

                        <a class="lv-footer" href="" ng-click="cleanMessages()">Borrar todos</a>
                    </div>
                </div>
            </li>
            <li class="dropdown" uib-dropdown popover-placement="left" popover-trigger="mouseenter"
                popover="Mira las alertas de vencimientos">
                <a uib-dropdown-toggle href="">
                    <i class="tm-icon zmdi zmdi-notifications"></i>
                    <i class="tmn-counts" ng-if="0 != 0">0</i>
                </a>
                <div class="dropdown-menu dropdown-menu-lg stop-propagate pull-right">
                    <div class="listview" id="notifications">
                        <div class="lv-header">
                            Notification

                            <ul class="actions">
                                <li>
                                    <a href="" data-ng-click="hctrl.clearNotification($event)">
                                        <i class="zmdi zmdi-check-all"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="lv-body">
                            <a class="lv-item" ng-href="" ng-repeat="it in []">
                                <div class="media">
                                </div>
                            </a>
                        </div>

                        <div class="clearfix"></div>

                        <a class="lv-footer" href="">View Previous</a>
                    </div>

                </div>
            </li>
        </ul>
    </li>
</ul>