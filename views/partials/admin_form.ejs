<div class="card">
    <div class="card-header">
        <h2>Nuevo<small>Crear un nuevo administrador.</small></h2>
    </div>
    <div class="card-body card-padding">
        <form role="form" class="row" name="admin_form">
            <div class="form-group fg-line col-sm-4 {{nameIsValid ? '' : 'has-error'}}">
                <label for="username">Nombre de administrador</label>
                <input class="form-control input-sm" placeholder="Nombre de usuario" id="username" ng-model="form.name"
                        ng-blur="validateName()"/>
            </div>
            <div class="form-group fg-line col-sm-4 {{emailIsValid ? '' : 'has-error'}}">
                <label for="email">Email</label>
                <input class="form-control input-sm" placeholder="Email" type="email" id="email"
                       ng-blur="validateEmail()" ng-model="form.email" />
            </div>
            <div class="toggle-switch col-sm-4" data-ts-color="blue">
                <label for="super"
                       popover-placement="right" popover-trigger="mouseenter"
                       popover="Con el super administrador podras administrar otros administradores y crear grupos de usuarios"
                        >Super Administrador</label>
                <br/>
                <input type="checkbox" checked hidden="hidden" id="super" ng-model="form.role"/>
                <label for="super" class="ts-helper"></label>
            </div>
        </form>
        <div class="row right">
            <button class="btn btn-primary btn-lg waves-effect pull-right" ng-click="add()">Nuevo</button>
        </div>
    </div>
</div>