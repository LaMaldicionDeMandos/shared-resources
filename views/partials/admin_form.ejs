<div class="card">
    <div class="card-header">
        <h2>Nuevo<small>Crear un nuevo administrador.</small></h2>
    </div>
    <div class="card-body card-padding">
        <form role="form" class="row">
            <div class="form-group fg-line col-sm-4">
                <label for="username">Nombre de administrador</label>
                <input class="form-control input-sm" placeholder="Nombre de usuario" id="username"/>
            </div>
            <div class="form-group fg-line col-sm-4">
                <label for="email">Email</label>
                <input class="form-control input-sm" placeholder="Email" type="email" id="email"/>
            </div>
            <div class="toggle-switch col-sm-4" data-ts-color="blue">
                <label for="super">Super Administrador</label>
                <br/>
                <input type="checkbox" checked hidden="hidden" id="super"/>
                <label for="super" class="ts-helper"></label>
            </div>
        </form>
        <div class="row right">
            <button class="btn btn-primary btn-lg waves-effect pull-right" ng-click="newAdmin()">Nuevo</button>
        </div>
    </div>
</div>